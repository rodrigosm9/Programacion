void contarpalabra (string nombre)
{
	int cont=0,n,frase,vocales;
	int contarpalabra;
	cout<<"Introduzca la frase: "<<endl;
		for (int i=0; i<n; i++){
			if (frase [i]== " "){
				cont=cont+1;
				cout<< "Las palabras totales son: "<<contarpalabra;
				getch ();
			}
void vocales (string nombre);
	int cont=0;
	for (int i=0; i<n; i++)
		if (nombre [i]="a" || nombre [i]="e" || nombre [i]="i" ||nombre [i]="o" || nombre [i]="u"){
			cont++;
			cout<< "El total de vocales son: "<<cont;
		}
void consonante (string nombre);
int cont=0, longitud;
longitud= nombre.length();
for (int i=0;i<longitud;i++){
	if (nombre [i]!="a" && nombre [i]!="e" && nombre [i]!="i" && nombre [i]!="o" && nombre [i]!="u")
	{
		cont++;
	}
	cout<<"Las consonantes son :"<<cont;
  }
 }
}

