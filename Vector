// vec.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
#define MAX 100
using namespace std;

void cargar (int vec[], int tam);
void ordenar (int vec[], int tam);
void mostrar (int vec[], int tam);

void main (){
	int x,vec[MAX],opcion;
	do{
		cout<<"Ingrese el tamaÃ±o maximo del vector: "<<endl;
		cin>>x;
	} while (x>MAX || x<=0);

	do{
		cout<< "Menu"<<endl;
		cout<< " 1. Cargar "<<endl;
		cout<< " 2. Ordenar "<<endl;
		cout<< " 3. Mostrar "<<endl;
		cout<< " 4. Salir "<<endl;
		cout<< "Opcion: "<<endl;
		cin>> opcion;
		switch (opcion){
		case 1: cargar (vec, x);break;
		case 2: ordenar (vec,x);break;
		case 3: mostrar (vec,x);break;
		case 4: cout<< "Salir"<<endl;break;
		default: cout<< "Error"<<endl;break;
		}
		getch();
		system("cls");
	} while (opcion!=0);
	getch ();
}

void cargar (int vec[], int tam)
{
	for (int i=0; i<tam; i++)
	{
		cout<<"Ingrese el valor de vec["<<i<<"]=";
		cin>>vec[i];
	}
}
void ordenar (int vec[], int tam)
{
	int aux;
	for (int i=0; i<tam; i++)
	{
		for (int j=i+1; j<tam; j++)
		{
			if (vec[i]>vec[j])
			{
				aux=vec[j];
				vec[j]=vec[i];
				vec[i]=aux;
			}
		}
	}
}
