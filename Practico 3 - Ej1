// Practico 3.cpp : Defines the entry point for the console application.
//
#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

int suma(int n);

void main()
{
	int n, sum;
	cout<<"Introducir la cantidad de numeros a sumar: ";
	cin>>n;
	sum=suma(n);
	cout<<"El valor de la suma es: "<<sum<<endl;
	getch();
}
int suma(int n)
{	int s=0,x=0;
	while (x<=n){
		s=s+x;
		x=x+1;}
	return s;
}
